syntax on

" encoding
set encoding=utf-8
set fileencoding=utf-8
set fileformat=unix

" stop the sounds
set noerrorbells

" indentation
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent

" line numbers
set number
set relativenumber
set cursorline
set signcolumn=yes

set nowrap

" search
set smartcase
set incsearch

" meta files
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

" reduce the update polling
set updatetime=100
